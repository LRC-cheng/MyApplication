<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#efece1"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/img_item_user_comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/main"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tv_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_below="@+id/img_item_user_comment"
        android:layout_toStartOf="@+id/tv_item_usercomment"
        android:layout_alignEnd="@+id/img_item_user_comment" />

    <TextView
        android:id="@+id/tv_item_usercomment"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="commment"
        android:textSize="15sp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/img_item_user_comment"
        android:layout_toEndOf="@+id/img_item_user_comment"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_item_usercomment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx-xx-xx"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/tv_item_TasteScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="口味评分："
        android:textSize="10sp"
        android:layout_alignTop="@+id/tv_item_usercomment"
        android:layout_toEndOf="@+id/tv_item_usercomment"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/commentsTasteScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="0.0"
        android:layout_above="@+id/commentsServiceScore"
        android:layout_toEndOf="@+id/tv_item_TasteScore" />

    <TextView
        android:id="@+id/tv_item_ServiceScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务评分："
        android:textSize="10sp"
        android:layout_below="@+id/tv_item_TasteScore"
        android:layout_alignStart="@+id/tv_item_TasteScore" />

    <TextView
        android:id="@+id/commentsServiceScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/tv_item_ServiceScore"
        android:layout_alignBottom="@+id/tv_item_ServiceScore"
        android:layout_toEndOf="@+id/tv_item_ServiceScore" />

    <TextView
        android:id="@+id/tv_item_EnvironmentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环境评分："
        android:textSize="10sp"
        android:layout_below="@+id/tv_item_ServiceScore"
        android:layout_alignStart="@+id/tv_item_ServiceScore" />

    <TextView
        android:id="@+id/commentsEnvironmentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/tv_item_EnvironmentScore"
        android:layout_alignBottom="@+id/tv_item_EnvironmentScore"
        android:layout_toEndOf="@+id/tv_item_EnvironmentScore" />

    <ImageView
        android:id="@+id/Imge_user_com1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nophoto"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/tv_item_usercomment_time"
        android:layout_alignStart="@+id/tv_item_usercomment" />

    <ImageView
        android:id="@+id/Imge_user_com2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nophoto3"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/Imge_user_com1"
        android:layout_toEndOf="@+id/Imge_user_com1" />
    <ImageView
        android:id="@+id/Imge_user_com3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nophoto4"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/Imge_user_com2"
        android:layout_toEndOf="@+id/Imge_user_com2" />
</RelativeLayout>